      <param name="can_id">32</param>

      <param name="pole_pairs">7</param>
      <param name="gear_ratio">1</param>
      <param name="kt">0.1</param>

      <param name="vel_limit">1000</param>
      <param name="acc_limit">1000</param>
      <param name="trq_limit">5.0</param>
      <param name="enc_off">0.0</param>
      <param name="read_only">0</param>
    </joint>

    <!-- Joint 4: CAN ID 33 -->
    <joint name="joint4">
      <param name="can_id">33</param>

      <param name="pole_pairs">7</param>
      <param name="gear_ratio">9</param>
      <param name="kt">0.1</param>

      <param name="vel_limit">1000</param>
      <param name="acc_limit">1000</param>
      <param name="trq_limit">5.0</param>
      <param name="enc_off">0.0</param>
      <param name="read_only">0</param>
    </joint>

    <!-- Joint 5: CAN ID 34 -->
    <joint name="joint5">
